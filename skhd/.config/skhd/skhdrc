# Window split
ctrl + alt - s : yabai -m window --toggle split

# Layout flip 
ctrl + shift + alt - x : yabai -m space --mirror x-axis
ctrl + shift + alt - y : yabai -m space --mirror y-axis

# change focus between external displays
ctrl + alt - n : yabai -m display --focus next 
ctrl + alt - b : yabai -m display --focus prev

# toggle window float
ctrl + shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximise window
ctrl + alt - f : yabai -m window --toggle zoom-fullscreen
ctrl + alt + shift -f : yabai -m window --toggle native-fullscreen

# Focus window
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east

# Move window
ctrl + alt + shift + - h : yabai -m window --swap west
ctrl + alt + shift + - j : yabai -m window --swap south
ctrl + alt + shift + - k : yabai -m window --swap north
ctrl + alt + shift + - l : yabai -m window --swap east

# Move and split
ctrl + cmd + shift - h : yabai -m window --warp west
ctrl + cmd + shift - j : yabai -m window --warp south
ctrl + cmd + shift - k : yabai -m window --warp north
ctrl + cmd + shift - l : yabai -m window --warp east

# resize window
cmd + alt - r : yabai -m space --balance

# shrink window  (⌘ + ⌥)
cmd + alt - h : yabai -m window --resize left:20:0
cmd + alt - j : yabai -m window --resize bottom:0:20
cmd + alt - k : yabai -m window --resize top:0:20
cmd + alt - l : yabai -m window --resize right:-20:0

# grow window  (⌘ + ⌥ + ⇧)
cmd + alt + shift - h : yabai -m window --resize left:-20:0
cmd + alt + shift - j : yabai -m window --resize bottom:0:-20
cmd + alt + shift - k : yabai -m window --resize top:0:-20
cmd + alt + shift - l : yabai -m window --resize right:20:0

